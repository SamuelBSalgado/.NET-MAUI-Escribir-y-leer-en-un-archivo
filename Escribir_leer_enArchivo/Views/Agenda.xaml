<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Escribir_leer_enArchivo.Views.Agenda"
             Title="Agenda SQLite">

    <ScrollView>
        <StackLayout>
            <Entry x:Name="inNombre" Placeholder="Nombre"/>
            <Entry x:Name="inDireccion" Placeholder="Dirección"/>
            <Entry x:Name="inTelefono" Placeholder="Teléfono"/>
            <Entry x:Name="inCorreo" Placeholder="Correo electrónico"/>

            <Button x:Name="GuardarButton" Text="Guardar" Clicked="Guardar_Clicked"/>
            <Button  Text="Buscar" Clicked="Buscar_Clicked"/>
            <Button Text="Eliminar" Clicked="Eliminar_Clicked"/>
            <Button x:Name="ModificarButton" Text="Modificar" Clicked="Modificar_Clicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>