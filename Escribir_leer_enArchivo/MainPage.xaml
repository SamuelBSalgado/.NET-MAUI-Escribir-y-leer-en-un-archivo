<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"

             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

             x:Class="Escribir_leer_enArchivo.MainPage"           
             Title="Login"
             Shell.TabBarIsVisible="False">

    <ScrollView>

        <StackLayout Margin="20">

            <Entry x:Name="UsernameEntry" Placeholder="Username" />

            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />



            <StackLayout Orientation="Horizontal">

                <CheckBox x:Name="RememberMeCheckbox" VerticalOptions="Center" />

                <Label Text="Remember Me" VerticalOptions="Center" />

            </StackLayout>



            <Button Text="Login" Clicked="OnLoginButtonClicked" />
            <Button Text="Register" Clicked="OnRegisterButtonClicked"></Button>

        </StackLayout>

    </ScrollView>

</ContentPage>